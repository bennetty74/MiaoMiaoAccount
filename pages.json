{
	"easycom": {
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/tabbar/index/home",
			"style": {
				// "navigationBarTitleText": "uni-app"
				"app-plus": {  
				        "titleNView": false //禁用原生导航栏
				}
			}
		},
		{
			"path": "pages/tabbar/statics/home",
			"style": {}
		},
		{
			"path": "pages/tabbar/add/home",
			"style": {
				"app-plus": {  
					"titleNView": {
						"titleAlign":"center",
						"titleText": "记账"
					}  
				}  
			}
		},
		{
			"path": "pages/tabbar/plan/home",
			"style": {}
		},
		{
			"path": "pages/tabbar/mine/home",
			"style": {
				"app-plus": {
				        "titleNView": false //禁用原生导航栏
				}
			}
		},
		{
		    "path" : "pages/sign-in/sign-in",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "",
		        "enablePullDownRefresh": false,
				"app-plus": {
				        "titleNView": false //禁用原生导航栏
				}
		    }
		    
		},
        {
            "path" : "pages/sign-up/sign-up",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/tabbar/mine/acct-manage/acct-manage",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "账户管理",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/tabbar/mine/acct-add/acct-add",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "添加账户",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/tabbar/index/bill/bill",
            "style" :                                                                                    
